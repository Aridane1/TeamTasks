---
import LayoutHeader from "../layouts/LayoutHeader.astro";
---

<LayoutHeader title="Crear tarea">
  <div class="flex flex-col items-center">
    <h1 class="text-7xl mt-8">Tareas</h1>
    <form class="flex flex-col w-fit mt-10">
      <label class="text-3xl my-2">Titulo</label>
      <input
        class="border-1 border-gray-300 rounded-full text-3xl p-2 m-2 w-80 h-14"
        type="text"
      />
      <label class="text-3xl my-2">Descripcion</label>
      <textarea
        class="border-1 h-40 border-gray-300 rounded-3xl text-3xl p-2 m-2 w-80"
      ></textarea>
      <label class="text-3xl my-2">Etiquetas</label>
      <input
        class="border-1 border-gray-300 rounded-full p-2 m-2 w-80 text-3xl h-14"
        type="text"
      />
      <label class="text-3xl my-2">Colaboradores</label>
      <select
        class="border-1 text-2xl border-gray-300 rounded-full p-2 m-2 w-80 h-14"
      >
        <option>Hola</option></select
      >
      <button
        class="mt-8 border-2 border-gray-300 p-2 m-2 rounded-full text-4xl text-white bg-navbar"
        type="submit">Register</button
      >
    </form>
  </div>
</LayoutHeader>
