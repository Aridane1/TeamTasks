---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <main class="flex flex-col items-center">
      <h1 class="text-8xl mt-14">{title}</h1>
      <img class="size-48 mt-10" src="images/TeamTaskRecortado.png" />
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #fff7ea;
  }
</style>
