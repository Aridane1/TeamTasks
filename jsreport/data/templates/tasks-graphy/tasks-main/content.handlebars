<html>

<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metro/4.1.5/css/metro.min.css">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js'></script>
</head>

<body>
    <canvas id='tasks' style="margin-bottom:30px"></canvas>

    <script>
             var tasksUsers = [];
            {{#each tasks}}
              tasksUsers.push({ count: '{{this.count}}',name: '{{this.username}}' });
            {{/each}}

            var labels = tasksUsers.map(entry => entry.name);
            var data = tasksUsers.map(entry => entry.count);
console.log(data)
            new Chart(tasks.getContext("2d"), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        fillColor: 'blue',
                        label: "Orders in time",
                        backgroundColor: "rgba(27,161,226,0.2)",
                        borderColor: "rgba(27,161,226,1)",
                        borderWidth: 1,
                        hoverBackgroundColor: "rgba(27,161,226,0.4)",
                        hoverBorderColor: "rgba(27,161,226,1)",
                        data: data.map(function (o) {
                            return o;
                        })
                    }]
                },
                options: {
                    animation: {
                        duration: 0
                    }
                }
            });
        </script>
</body>

</html>